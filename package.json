{
    "name": "termos-sklepik",
    "version": "1.0.0",
    "description": "Sklepik szkolny",
    "main": "server.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "start": "npm run build && node dist/server.js",
        "dev": "nodemon",
        "build": "tsc && tsc-alias && echo 'Build Finished! ðŸ‘'",
        "lint": "eslint --ignore-path .gitignore --ext .ts src/",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
        "migration:generate": "sequelize migration:generate --name",
        "migration": "sequelize db:migrate"
    },
    "author": "Jakub Rojek",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/rrozek/termos-sklepik.git"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "dependencies": {
        "axios": "^1.8.1",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.13.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.5",
        "sequelize-typescript": "^2.1.6",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "tsconfig-paths": "^4.2.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.13.7",
        "@types/pg": "^8.11.11",
        "@types/sequelize": "^4.28.20",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^8.25.0",
        "@typescript-eslint/parser": "^8.25.0",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-plugin-prettier": "^5.2.3",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.4.3",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.2",
        "sequelize-cli": "^6.6.2",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.6",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.11",
        "typescript": "^5.7.0"
    },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
